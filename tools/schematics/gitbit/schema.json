{
  "$schema": "http://json-schema.org/schema",
  "id": "gitbit",
  "type": "object",
  "properties": {
    "app": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "enum": ["Gitbit", "Electron"],
      "x-prompt": "What application are you generating for?"
    },
    "libraryType": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "enum": ["data-access", "library", "typings", "utils", "feature"],
      "x-prompt": "What type of library are you generating for?"
    },
    "type": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 2
      },
      "enum": ["component", "service", "module", "library"],
      "x-prompt": "What do you want to generate?"
    },
    "name": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 3
      },
      "minLength": 1,
      "x-prompt": "What do you want to generate?"
    },
    "libraryName": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 4
      },
      "x-prompt": "Specify the name of the library you are generating for? (Required for all except new libraries)"
    },
    "route": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 5
      },
      "x-prompt": "Specify parent routing module? (Required when generating new features)"
    }
  },
  "required": ["name"]
}
